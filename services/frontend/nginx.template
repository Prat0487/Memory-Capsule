server {
    listen $NGINX_PORT;
    server_name _;
    root /usr/share/nginx/html;
    
    # For SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Handle API requests through environment variables in the React app
    # Static file caching
    location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000";
    }
}